rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - users can upload/update/delete their own profile picture
    match /profile_images/{userId} {
      // Users can only upload/update/delete their own profile image
      allow read: if true; // Anyone can read profile images (for displaying)
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.auth.token.firebase.sign_in_provider != 'anonymous'
                   // Only allow image file types
                   && request.resource.contentType.matches('image/.*')
                   // Limit file size to 5MB
                   && request.resource.size < 5 * 1024 * 1024;
      
      // Allow delete only by the owner
      allow delete: if request.auth != null 
                    && request.auth.uid == userId
                    && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }
    
    // Default deny rule for any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

